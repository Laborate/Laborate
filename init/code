NameVirtualHost *:80

<VirtualHost *:80>
    ServerAdmin {{user_name}}@laborate.io
    ServerName code.{{user_name}}.dev.laborate.io
    DocumentRoot /home/{{user_name}}/code/public_html/views
    ErrorLog /home/{{user_name}}/code/server/apache/error.log
    LogLevel debug
    CustomLog /home/{{user_name}}/code/server/apache/access.log combined
</VirtualHost>


<VirtualHost *:80>
    ServerAdmin {{user_name}}@laborate.io
    ServerName resources.code.{{user_name}}.dev.laborate.io
    DocumentRoot /home/{{user_name}}/code/public_html/resources
    ErrorLog /home/{{user_name}}/code/server/apache/error_resources.log
    LogLevel debug
    CustomLog /home/{{user_name}}/code/server/apache/access_resources.log combined
</VirtualHost>