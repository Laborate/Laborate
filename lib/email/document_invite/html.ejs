<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <link rel="stylesheet" href="style.css">
    </head>
    <body leftmargin="0" margin="0" topmargin="0" marginheight="0" offset="0">
        <table bgcolor="#FFFFFF" width="100%" height="100%" cellpadding="0px" cellspacing="0px" class="core">
            <tr valign="top">
                <td>
                    <table cellpadding="0px" cellspacing="0px" width="100%">
                        <tr>
                            <td valign="top" align="center" class="header">
                                <img src="http://<%= host %>/img/email_logo.png"/>
                            </td>
                        </tr>
                        <tr>
                            <td valign="top">
                                <table cellpadding="0px" cellspacing="0px" width="300px" align="center">
                                    <tr>
                                        <td class="body">
                                        <!-- Start: Content Section -->

                                            <table cellpadding="0px" cellspacing="0px" width="100%" align="center">
                                                <tr>
                                                    <td class="header-inner">
                                                        You Have Been Invited!
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="body-inner">
                                                        <strong>File Name:</strong> <%= name %>
                                                        <br><br>
                                                        <strong>File ID:</strong> <%= id %>
                                                        <br><br>
                                                        <strong>File Access:</strong> <%= access %>
                                                        <br><br>
                                                        <% if(collaborators) { %>
                                                            <strong>Collaborators:</strong> <%= collaborators %>
                                                            <br><br>
                                                        <% } %>
                                                        <% if(message) { %>
                                                            <strong>Message:</strong> <%= message %>
                                                            <br><br>
                                                        <% } %>
                                                        <a href="http://<%= host %>/editor/<%= id %>/" class="link-button">Join Document</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        <!-- End: Content Section -->
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td valign="top" align="center" class="footer">
                                a <a href="http://<%= host %>/" class="footer-link">laborate.io</a> product
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>
