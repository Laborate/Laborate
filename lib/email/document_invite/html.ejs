<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    </head>
    <body leftmargin="0" margin="0" topmargin="0" marginheight="0" offset="0">
        <table id="wrapper">
            <tr valign="top">
                <td align="center">
                    <table id="core">
                        <tr valign="top">
                            <td valign="top" align="left" id="header">
                                <table class="full">
                                    <tr valign="top">
                                        <td align="center">
                                            <img id="logo" src="http://<%= host %>/img/email_logo.png"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr valign="top">
                            <td align="center">
                                <table id="content" cellpadding="0px" cellspacing="0px">
                                    <tr>
                                        <td id="top" valign="top">
                                            <!-- Start Here -->
                                            <div class="header">You Have Been Invited!</div>
                                            <br>
                                            <span class="bold">File Name:</span> <%= name %>
                                            <br><br>
                                            <span class="bold">File ID:</span> <%= id %>
                                            <br><br>
                                            <span class="bold">File Access:</span> <%= access %>
                                            <br><br>
                                            <% if(collaborators) { %>
                                                <span class="bold">Collaborators:</span> <%= collaborators %>
                                                <br><br>
                                            <% } %>
                                            <% if(message) { %>
                                                <span class="bold">Message:</span> <%= message %>
                                                <br><br>
                                            <% } %>
                                            <a href="http://<%= host %>/editor/<%= id %>/" class="link">Join Document</a>
                                            <!-- End Here -->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td id="bottom" valign="middle">
                                            Â© <a class="link" href="http://<%= host %>">
                                                <%= company %>
                                            </a>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>
